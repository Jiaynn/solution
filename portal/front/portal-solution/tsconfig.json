{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "jsx": "react",
    "outDir": ".tmp",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false, // TODO
    "resolveJsonModule": true
  },
  "exclude": [
    "e2e",
    "node_modules",
    "bower_components",
    "src/**/*.tmp",
    "src/**/*.tmp.ts",
    "src/**/*.tmp.tsx",
    "src/**/*.tmp.less",
    "src/**/*.tmp.plainless",
    "secondary"
  ],
  "atom": {
    "rewriteTsconfig": false
  },
  "compileOnSave": false,
  "buildOnSave": false
}
